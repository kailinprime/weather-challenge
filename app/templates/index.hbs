<div class="container">
    {{#if location.name}}
        <div class="well well-lg form-horizontal">
            <div class="form-group">
                <div class="col-xs-12 col-sm-6">
                    <div class="btn-group">
                        <h2>{{location.name}},{{location.country}}</h2>
                    </div>
                    <div class="btn-group">
                        <h3>(<i>{{location.lat}},{{location.lon}}</i>)</h3>
                    </div>
                </div>
                <div class="col-xs-12 col-sm-6">
                    <div class="col-xs-12 col-sm-6">
                        <label>Temp Scale:</label>
                        {{view 'radio-button-group' contentBinding="tempScales" valueBinding="location.scale" class='btn-block btn-group-justified'}}
                    </div>
                    <div class="col-xs-12 col-sm-6">
                        <label>Forecast:</label>
                        {{view 'radio-button-group' contentBinding="forecastScopes" valueBinding="location.scope" class='btn-block btn-group-justified'}}
                    </div>
                </div>
            </div>
        </div>
    {{else}}
        <div class="row alert alert-info">
            <span class="fa fa-refresh fa-spin fa-3x"></span><span><h3>Finding location</h3></span>
        </div>
    {{/if}}
    {{#if location.name}}
        {{weather-current model=current class="current" scale=location.scale}}
        {{weather-forecast model=forecast class="forecast" scale=location.scale scope=location.scope}}
    {{/if}}
</div>